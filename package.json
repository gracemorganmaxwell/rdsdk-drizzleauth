{
  "name": "@redwoodjs/starter-drizzle",
  "version": "1.0.0",
  "description": "A RedwoodSDK starter for projects with a database using Drizzle",
  "main": "index.js",
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "NODE_OPTIONS=--conditions=react-server npm run build:client && NODE_OPTIONS=--conditions=react-server npm run build:server",
    "build:client": "vite build --outDir dist/client --ssr false",
    "build:server": "vite build --outDir dist/server --ssr src/worker.tsx",
    "dev": "NODE_ENV=${NODE_ENV:-development} vite dev",
    "dev:init": "rw-scripts dev-init",
    "preview": "npm run build && npm run vite preview",
    "worker:run": "rw-scripts worker-run",
    "clean": "npm run clean:vite",
    "clean:vite": "rm -rf ./node_modules/.vite",
    "release": "NODE_OPTIONS=--conditions=react-server npm run clean && npm run build && wrangler deploy",
    "format": "prettier --write ./src",
    "migrate:new": "drizzle-kit generate",
    "migrate:dev": "wrangler d1 migrations apply DB",
    "seed": "npm run worker:run ./src/db/seed.ts",
    "check": "npm run types",
    "types": "npm run tsc"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.39.3",
    "rwsdk": "0.0.80",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^9.0.8",
    "drizzle-kit": "^0.30.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "vite": "^6.3.5",
    "wrangler": "^4.25.0"
  },
  "packageManager": "pnpm@9.14.4+sha512.c8180b3fbe4e4bca02c94234717896b5529740a6cbadf19fa78254270403ea2f27d4e1d46a08a0f56c89b63dc8ebfd3ee53326da720273794e6200fcf0d184ab"
}
